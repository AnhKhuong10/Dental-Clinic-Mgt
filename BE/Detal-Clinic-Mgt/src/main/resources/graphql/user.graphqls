# ===============INPUT====================
input CreateUserInput {
    username: String
    password: String
    rePassword: String
    fullName: String
    birthdate: Date
    phone: String
    email: String
    salary: Int
    enabled: Boolean
    roleId: ID
}

input UpdateUserInput{
    userId:ID!
    fullName: String
    birthdate: Date
    phone: String
    salary: Int
    enabled: Boolean
    roleId: ID
}

# ================Query =====================
extend type Query{
    users(page: Int!, size: Int!, search: String) : UserPage!
    userByUserId(userId: ID!): UserDTO
}

extend type Mutation {
    createUser(input: CreateUserInput!): UserDTO!
    updateUser(input: UpdateUserInput!): UserDTO!
}