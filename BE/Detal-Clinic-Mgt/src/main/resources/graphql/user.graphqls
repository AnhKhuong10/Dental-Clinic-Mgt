
type User{
    userId: ID!
    username: String
    password: String
    fullName: String
    birthdate: String
    phone: String
    email: String
    enabled: Boolean
    salary: Int
    role: Role!
}

type UserPage {
    content: [User!]!
    totalPages: Int!
    totalElements: Int!
    pageNumber: Int!
    pageSize: Int!
}

type UserDTO{
    userId: ID!
    username: String
    fullName: String
    email: String
    phone: String
    birthdate: String
    salary: Int
    enabled: Boolean
    roleName: String!
}

